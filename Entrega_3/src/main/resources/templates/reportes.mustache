            var reportNumber = row.cells[0].innerText;
            alert("Detalles del " + reportNumber);
            // Aquí puedes agregar lógica para mostrar detalles adicionales del reporte
        }

        function deleteRow(button) {
            // Mostrar un cuadro de confirmación
            if (confirm("¿Estás seguro de que deseas borrar este reporte?")) {
                // Si el usuario confirma, eliminar la fila
                var row = button.closest("tr");
                row.parentNode.removeChild(row);
            }
        }
