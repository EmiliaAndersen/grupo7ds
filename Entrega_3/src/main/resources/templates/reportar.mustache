        <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
            <form method='POST' class="row p-4" action="/reportar"> <!-- Asegúrate de que la acción sea "/reportar" -->
                <div class="row">
                    <h2>Reportar fallas técnicas</h2>
                    <hr>

                      {{#errorReportar}}
                        <div class="alert-warning alert my-2">{{errorReportar}}</div>
                        {{/errorReportar}}
                      {{#successReportar}}
                        <div class="alert-success alert my-2">{{successReportar}}</div>
                        {{/successReportar}}


                    <div class="form-row">
                        <div class="col-md-8">
                            <label for="usuario">Heladera</label>
                            <div class="input-group">
                                <select class="form-select" name="heladera" id="heladera" required>
                                    <option value="">Seleccione...</option>
                                    {{#heladeras}}
                                        <option value="{{id}}">{{ubicacion.nombre}} - {{ubicacion.direccion}}</option>
                                    {{/heladeras}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-2">
                        <div class="col-md-8">
                            <label for="Password">Descripción</label>
                            <textarea name="motivo" class="form-control" required placeholder="El problema fue que..."></textarea>
                        </div>
                    </div>
                    <hr class="my-3">
                    <div class="form-row">
                        <button type="submit" id="btn-login-submit" class="btn btn-primary mt-2 mb-2 col-md-4">Continuar</button><br>
                    </div>
                </div>
            </form>
