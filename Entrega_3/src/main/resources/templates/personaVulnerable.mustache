                    {{/successMessage}}
                    {{#errorMessage}}
                        <div class="alert alert-warning my-2" >{{errorMessage}}</div>
                    {{/errorMessage}}
                    <form method="POST" action="/personaVulnerable" class="form-row mt-2" id="form-donacion-dinero">
                        <div class="form-row mt-2">
                            <div class="col-md-12">
                                <label for="nombre">Nombre*</label>
                                <input type="text" name="nombre" class="form-control" id="nombre" style="width: 70%;" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="fecha_nacimiento">Fecha de nacimiento*</label>
                            <input type="date" name="fecha_nacimiento" class="form-control" id="fecha_nacimiento" style="width: 70%;" required>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="frecuencia">Situación*</label>
                            <div class="input-group" style="width: 70%;">
                                <select class="form-select" name="frecuencia" id="frecuencia" required>
                                    <option value="">Seleccione...</option>
                                    <option value="sin-vivienda">Sin vivienda</option>
                                    <option value="domicilio">Domicilio</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="tipo_documento">Tipo de documento*</label>
                            <div class="input-group" style="width: 70%;">
                                <select class="form-select" name="tipo_documento" id="tipo_documento" required>
                                    <option value="">Seleccione...</option>
                                    <option value="DNI">DNI</option>
                                    <option value="CUIL">CUIL</option>
                                    <option value="Pasaporte">Pasaporte</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="numero_documento">Número de documento* (Sin -)</label>
                            <input type="number" min="0" name="numero_documento" class="form-control" id="numero_documento" style="width: 70%;" required>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="menores_cargo">Menores a cargo*</label>
                            <div class="input-group" style="width: 70%;">
                                <input class="form-control" type="number" step="1" min="0" value="0" max="12" name="menores_cargo" id="menores_cargo" required>
                            </div>
                        </div>
                        <hr>
                        <div class="form-row">
                            <button type="submit" id="btn-login-submit" name="signin-pj" class="btn btn-primary mt-2 mb-2 col-md-4">Registrar</button><br>
                        </div>
                    </form>
