        <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
            <div class="row">
                <div class="col-md-5">
                    <center><img src="media\img-base.png" style="width:80%" class="img-heladera"></center>
                </div>
                <div class="col-md-7">
                    <h2 class="my-4" style="font-weight: 350">Registrar persona vulnerable</h2>
                    <hr>
                    <form method="POST" action="/personaVulnerable" class="form-row mt-2" id="form-donacion-dinero">
                        <div class="form-row mt-2">
                            <div class="col-md-12">
                                <label for="nombre">Nombre*</label>
                                <input type="text" name="nombre" class="form-control" id="nombre" style="width: 70%;" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="fecha_nacimiento">Fecha de nacimiento*</label>
                            <input type="date" name="fecha_nacimiento" class="form-control" id="fecha_nacimiento" style="width: 70%;" required>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="frecuencia">Situación*</label>
                            <div class="input-group" style="width: 70%;">
                                <select class="form-select" name="frecuencia" id="frecuencia" required>
                                    <option value="">Seleccione...</option>
                                    <option value="sin-vivienda">Sin vivienda</option>
                                    <option value="domicilio">Domicilio</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="tipo_documento">Tipo de documento*</label>
                            <input type="text" name="tipo_documento" class="form-control" id="tipo_documento" style="width: 70%;" required>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="numero_documento">Número de documento*</label>
                            <input type="text" name="numero_documento" class="form-control" id="numero_documento" style="width: 70%;" required>
                        </div>
                        <div class="col-md-12 mt-1">
                            <label for="menores_cargo">Menores a cargo*</label>
                            <div class="input-group" style="width: 70%;">
                                <select class="form-select" name="menores_cargo" id="menores_cargo" required>
                                    <option value="">Seleccione...</option>
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4+">4+</option>
                                </select>
                            </div>
                        </div>
                        <hr>
                        <div class="form-row">
                            <button type="submit" id="btn-login-submit" name="signin-pj" class="btn btn-primary mt-2 mb-2 col-md-4">Registrarse</button><br>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
