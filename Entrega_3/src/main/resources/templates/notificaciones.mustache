<div class="container-fluid mt-5 mb-2" style="min-height: 600px;">
    <div class="row p-4">
        <div class="col-lg-12">
            <div class="border border-round shadow-1 px-2 mt-2 mb-4" style="background-color: #eff5ff;">
                <h2 class="m-2">Notificaciones</h2>
                <hr>
                <div class="row">
                    <div class="accordion my-2 col-12" id="accordionAlerts">
                        <h5>Notificaciones:</h5>
                        {{#restantes}}
                            <div class="accordion-item">
                                <h2 class="accordion-header d-flex justify-content-between align-items-center">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseA{{id}}" aria-expanded="false" aria-controls="collapseA">
                                        Notificación de heladera {{heladera.ubicacion.nombre}} de tipo {{tipo}}
                                    </button>
                                    <button type="button" class="btn-close" aria-label="Close" onclick="marcarComoLeida({{id}})"></button>
                                </h2>
                                <div id="collapseA{{id}}" class="accordion-collapse collapse" data-bs-parent="#accordionAlerts">
                                    <div class="accordion-body text-center">
                                        <p>{{mensajeEnviado}}</p>
                                    </div>
                                </div>
                            </div>
                        {{/restantes}}
                        {{#faltantes}}
                            <div class="accordion-item">
                                <h2 class="accordion-header d-flex justify-content-between align-items-center">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseA{{id}}" aria-expanded="false" aria-controls="collapseA">
                                        Notificación de heladera {{heladera.ubicacion.nombre}} de tipo {{tipo}}
                                    </button>
                                    <button type="button" class="btn-close" aria-label="Close" onclick="marcarComoLeida({{id}})"></button>
                                </h2>
                                <div id="collapseA{{id}}" class="accordion-collapse collapse" data-bs-parent="#accordionAlerts">
                                    <div class="accordion-body text-center">
                                        <p>{{mensajeEnviado}}</p>
                                    </div>
                                </div>
                            </div>
                        {{/faltantes}}
                        {{#desperfecto}}
                            <div class="accordion-item">
                                <h2 class="accordion-header d-flex justify-content-between align-items-center">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseA{{id}}" aria-expanded="false" aria-controls="collapseA">
                                        Notificación de heladera {{heladera.ubicacion.nombre}} de tipo {{tipo}}
                                    </button>
                                    <button type="button" class="btn-close" aria-label="Close" onclick="marcarComoLeida({{id}})"></button>
                                </h2>
                                <div id="collapseA{{id}}" class="accordion-collapse collapse" data-bs-parent="#accordionAlerts">
                                    <div class="accordion-body text-center">
                                        <p>{{mensajeEnviado}}</p>
                                    </div>
                                    <button type="button"
                                            id="redistribuirBtn"
                                            class="btn btn-primary btn-sm"
                                            data-viandas="{{heladera.stock}}"
                                            data-heladera-id="{{heladera.id}}">>
                                        Distribuir viandas
                                    </button>
                                </div>
                            </div>
                        {{/desperfecto}}
                    </div>
                </div>
                {{^notificaciones}}
                    <p>No hay notificaciones en este momento.</p>
                {{/notificaciones}}
            </div>
        </div>
    </div>
</div>

</body>
<footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</footer>
<script>
    const modalVisita = document.getElementById('modalVisitaFalla');
    if (modalVisita) {
        modalVisita.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            document.getElementById('id_incidente').value = button.getAttribute('data-bs-id-incidente');
        });
    }

    function marcarComoLeida(id) {
        fetch('/notificaciones', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: id })
        })
                .then(response => {
                    if (response.ok) {
                        const elementoNotificacion = document.querySelector(`#collapseA${id}`).closest('.accordion-item');
                        elementoNotificacion.remove();
                    } else {
                        console.error('Error al marcar la notificación como leída.');
                    }
                })
                .catch(error => {
                    console.error('Error de red:', error);
                });
    }
    document.querySelectorAll("#redistribuirBtn").forEach(button => {
        button.addEventListener("click", () => {
            const cantidadViandas = button.getAttribute("data-viandas");
            const heladeraId = button.getAttribute("data-heladera-id");
            const url = `/notificaciones/redistribucion?viandas=${cantidadViandas}&heladera_id=${heladeraId}`;
            window.location.href = url; // Redirige a la nueva ruta
        });
    });


</script>
