                    </ul>
                    <form class="d-flex" role="search" style="margin: unset;">
                        <!--<a class="btn btn-primary" href="/entrega/perfil.html">Mi perfil</a>-->
                    </form>
                </div>
            </div>
        </nav>
        <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
            <div class="row">
                <div class="col-md-5">
                    <center><img src="media\img-base.png" style="width:80%" class="img-heladera"></center>
                </div>
                <div id="form-login" class="col-md-7">
                    <h2 class="my-4" style="font-weight: 350">Selecione forma de colaborar</h2>
                    <hr>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label for="usuario">Seleccione tipo de colaborador</label>
                            <select class="form-select" name="tipo_colaborador" id="tipo_colaborador" required>
                                <option value="">Seleccione...</option>
                                <option value="dd">Donacion de dinero</option>
                                <option value="dv">Donacion de vianda</option>
                                <option value="ddv">Distribucion de vianda</option>
                            </select>
                        </div>
                    </div>  
                    <hr>
                    <form method='POST' class="form-row mt-2" id="form-donacion-vianda" style="display: none">
                        <div class="form-row mt-2">
                            <div class="col-md-12">
                                <label for="comida">Comida*</label>
                                <input type="text" name="Comida" class="form-control" id="comida">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="fecha-caducidad">Fecha de caducidad*</label>
                                <input type="date" name="fecha-caducidad" class="form-control" id="fecha-caducidad">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="fecha-donacion-vianda">Fecha de donacion*</label>
                                <input type="date" name="fechaDonacionVianda" class="form-control" id="fecha-donacion-vianda">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="colaborador">Colaborador*</label>
                                <input type="text" name="colaborador" class="form-control" id="colaborador">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="heladera">Heladera*</label>
                                <input type="text" name="heladera" class="form-control" id="heladera">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="peso">Peso*</label>
                                <input type="text" name="peso" class="form-control" id="peso">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="calorias">Calorias*</label>
                                <input type="text" name="calorias" class="form-control" id="calorias">
                            </div>
                        </div>
                        <hr>
                        <div class="form-row">
                            <button type="submit" id="btn-login-submit" name="form-donacion-vianda" class="btn btn-primary mt-2 mb-2 col-md-4">Guardar</button><br>
                        </div>
                    </form>
                    <form method='POST' class="form-row mt-2" id="form-distribucion-vianda" style="display: none">
                        <div class="form-row mt-2">
                            <div class="col-md-12">
                                <label for="heladera-origen">Heladera origen*</label>
                                <input type="text" name="heladera-origen" class="form-control" id="heladera-origen">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="heladera-destino">Heladera destino*</label>
                                <input type="text" name="heladera-destino" class="form-control" id="heladera-destino">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="cantidad">Cantidad*</label>
                                <input type="text" name="cantidad" class="form-control" id="cantidad">
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="motivos">Motivos*</label>
                                <div class="input-group">
                                    <select class="form-select" name="motivos" id="motivos" required>
                                        <option value="">Seleccione...</option>
                                        <option value="desperfecto">Desperfecto en la heladera</option>
                                        <option value="faltaViandas">Falta de viandas en heladera destino</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="fechaDistribucionVianda">Fecha*</label>
                                <input type="date" name="fechaDistribucionVianda" class="form-control" id="fechaDistribucionVianda" required>
                            </div>
                        </div>
                        <hr>
                        <div class="form-row">
                            <button type="submit" id="btn-login-submit" name="form-distribucion-vianda" class="btn btn-primary mt-2 mb-2 col-md-4">Guardar</button><br>
                        </div>
                    </form>
                    <form method='POST' class="form-row mt-2" id="form-donacion-dinero" style="display: none">
                        <div class="form-row mt-2">
                            <div class="col-md-12">
                                <label for="Password">Fecha*</label>
                                <input type="date" name="fecha_nacimiento" class="form-control" id="fecha_nacimiento" required>
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="Password">Monto*</label>
                                <input type="password" name="password" class="form-control" id="password" required>
                            </div>
                            <div class="col-md-12 mt-1">
                                <label for="Frecuencia">Frecuencia</label>
                                <div class="input-group">
                                    <select class="form-select" name="frecuencia" id="frecuencia" required>
                                        <option value="">Seleccione...</option>
                                        <option value="Mensual">Mensual</option>
                                        <option value="Semanal">Semanal</option>
                                        <option value="SinFrecuencia">Sin frecuencia</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="form-row">
                            <button type="submit" id="btn-login-submit" name="form-donacion-dinero" class="btn btn-primary mt-2 mb-2 col-md-4">Guardar</button><br>
                        </div>
                    </form>
                </div>
            </div>
        </div>
   </body>
    <footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </footer>
</html>
<script>
    
    if(document.getElementById("tipo_colaborador")){
        document.getElementById("tipo_colaborador").addEventListener("change", function() {
            if(document.getElementById('tipo_colaborador').value=='dd'){
                document.getElementById('form-donacion-dinero').style.display='';
                document.getElementById('form-donacion-vianda').style.display='none';
                document.getElementById('form-distribucion-vianda').style.display='none';
            }else if(document.getElementById('tipo_colaborador').value=='dv'){
                document.getElementById('form-donacion-dinero').style.display='none';
                document.getElementById('form-donacion-vianda').style.display='';
                document.getElementById('form-distribucion-vianda').style.display='none';
            }else if(document.getElementById('tipo_colaborador').value=='ddv'){
                document.getElementById('form-donacion-dinero').style.display='none';
                document.getElementById('form-donacion-vianda').style.display='none';
                document.getElementById('form-distribucion-vianda').style.display='';
            }else{
                document.getElementById('form-donacion-dinero').style.display='none';
                document.getElementById('form-donacion-vianda').style.display='none';
                document.getElementById('form-distribucion-vianda').style.display='none';
            }
        });
    }
</script>
