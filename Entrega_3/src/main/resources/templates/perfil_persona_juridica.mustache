            </div>
        </div>
    </nav>
    <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
            {{#successMessage}}
                <div class="alert alert-success my-2" >{{successMessage}}</div>
            {{/successMessage}}
            <form method='POST' class="row p-4">
                <div class="row">
                    <h2 class="col-md-4">Mi perfil</h2>
                    <div class="col-md-4"></div>
                    <h5 class="col-md-4" id="btn-edit">Editar <i class="bi bi-pencil-fill" onclick="editar()" style="cursor: pointer;"></i></h5>
                    <a href="/perfil_persona_juridica" type="submit" class="col-md-4 btn btn-danger btn-sm" id="btn-cancel" style="display: none;width: 120px">Cancelar edicion</a>
                </div>
                <hr>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-12">
                            <label for="razon-social">Razon Social</label>
                            <input type="text" name="razon-social" class="form-control" id="razon-social" value="{{nombre}}" disabled>
                        </div>
                        <div class="col-md-12">
                            <label for="tipo">Tipo</label>
                            <input type="text" name="tipo" class="form-control" id="tipo"  value="{{tipo}}" disabled>
                        </div>
                        <div class="col-md-12">
                            <label for="direccion">Direccion</label>
                            <input type="text" name="direccion" class="form-control" id="direccion" value="{{direccion}}" disabled>
                        </div>
                        <div class="col-md-12">
                            <label for="medios-contacto">Medio de contacto</label>
                            <input type="text" name="medios-contacto" class="form-control" id="medios-contacto" value="{{tipo-mdc}} - {{detalle-mdc}}" disabled>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-row my-3">
                        <center><a href="/reportar" id="btn-login-submit" class="btn btn-primary col-md-8">Reportar falla tecnica</a></center>
                    </div>
                    <div class="form-row my-3">
                        <center><a href="/suscripcion" id="btn-login-submit" class="btn btn-primary col-md-8">Suscribirme heladera</a></center>
                    </div>
                    <div class="form-row my-3">
                        <center><a href="/heladeras" id="btn-login-submit" class="btn btn-primary col-md-8">Mis heladeras</a></center>
                    </div>
                    <div class="form-row my-3">
                        <center><a href="/colaboraciones_realizadas" id="btn-login-submit" class="btn btn-primary col-md-8">Colaboraciones Realizadas</a></center>
                    </div>
                </div>
                <hr class="my-3">
                <div class="form-row">
                    <button type="submit" id="btn-cerrar-sesion" name="btn-accion" value="logout" class="btn btn-warning col-md-4 mx-auto">Cerrar sesion</button>
                    <button type="submit" id="btn-guardar" name="btn-accion" value="save" class="btn btn-success col-md-4 mx-auto" style="display: none">Guardar datos</button>
                </div>
            </form>
        </div><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>

</html>
<script>
    function editar() {
        document.getElementById("razon-social").disabled = false;
        document.getElementById("tipo").disabled = false;
        document.getElementById("direccion").disabled = false;
        document.getElementById("medios-contacto").disabled = false;
        document.getElementById("btn-guardar").style.display="";
        document.getElementById("btn-edit").style.display="none";
        document.getElementById("btn-cancel").style.display="";
    }
</script>