</nav>

<div class="container-fluid mt-5 mb-2" style="min-height: 600px;">
    <div class="row p-4">
        <div class="col-lg-7">
            <div class="border border-round shadow-1 px-2" style="background-color: #eff5ff;">
                <h2 class="m-2">Mis heladeras</h2>
                <hr>
                <iframe class="mb-3 mt-2" src="https://wa.mdg.services/gestion/map/?cord={{localizaciones}}" style="width:100%;height: 500px"></iframe>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="border border-round shadow-1 px-2 mt-2" style="background-color: #eff5ff;">
                <h2 class="m-2">Heladeras</h2>
                <hr>
                {{#heladeras}}
                    <div class="accordion my-2" id="accordionHeladeras">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                                    Heladera {{ubicacion.nombre}}:
                                </button>
                            </h2>
                            <div id="collapse{{id}}" class="accordion-collapse collapse " data-bs-parent="#accordionHeladeras">
                                <div class="accordion-body">
                                    Temperatura Minima: <span style="width:50px" class="badge text-bg-info">{{temperaturaMinima}}°C</span><br>
                                    Temperatura Maxima: <span style="width:50px" class="badge text-bg-info">{{temperaturaMaxima}}°C</span><br>
                                    Ultima Temperatura: <span style="width:50px" class="badge text-bg-info">{{temp_ult}}°C</span><br>
                                    Ubicacion: <span style="width:150px" class="badge text-bg-info">{{ubicacion.nombre}}</span><br>
                                    Estado: <span style="width:150px" class="badge text-bg-info">{{estado}}</span><br>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/heladeras}}
            </div>
        </div>
        <hr>

        <div class="border border-round shadow-1 px-2 mt-2 mb-4" style="background-color: #eff5ff;">
            <h2 class="m-2">Fallas tecnicas reportadas</h2>
            <hr>
            <div class="row">
                <div class="accordion my-2 col-md-6" id="accordionAlerts">
                    <h5>Fallas Técnicas:</h5>
                    {{#fallasData}}
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseA{{id}}" aria-expanded="false" aria-controls="collapseA">
                                    Falla Técnica en heladera {{nombreHeladera}}
                                </button>
                            </h2>
                            <div id="collapseA{{id}}" class="accordion-collapse collapse" data-bs-parent="#accordionAlerts">
                                <div class="accordion-body">
                                    <p>Reportado por: {{nombreReportador}}</p>
                                    <p>Descripción Técnica: {{descripcionTecnica}}</p>
                                    <p>Fecha del reporte: {{fecha}}</p>
                                </div>
                            </div>
                        </div>
                    {{/fallasData}}
                </div>
                <div class="accordion my-2 col-md-6" id="accordionAlerts">
                    <h5>Alertas:</h5>
                    {{#alertasData}}
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseA{{id}}" aria-expanded="false" aria-controls="collapseA">
                                    Alerta en {{nombreHeladera}}
                                </button>
                            </h2>
                            <div id="collapseA{{id}}" class="accordion-collapse collapse" data-bs-parent="#accordionAlerts">
                                <div class="accordion-body">
                                    <p>Tipo de Alerta: {{alertaTipo}}</p>
                                </div>
                            </div>
                        </div>
                    {{/alertasData}}
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</footer>
</html>