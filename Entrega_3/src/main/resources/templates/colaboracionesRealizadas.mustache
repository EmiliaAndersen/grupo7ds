<div class="container mt-5 mb-2">
    <h2 class="mb-4">Colaboraciones Realizadas</h2>
    {{#colabs_vacio}}
    <div class="alert alert-warning text-center" role="alert">
        {{colabs_vacio}}
    </div>
    {{/colabs_vacio}}
    <div class="row gy-4">
        <!-- Distribuciones -->
        <div class="col-md-12">
            {{#distribuciones}}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Distribución de viandas</h5>
                        <p><strong>Fecha:</strong> {{fecha}}</p>
                        <p><strong>Heladera Origen:</strong> {{heladeraOrigen.ubicacion.nombre}}</p>
                        <p><strong>Heladera Destino:</strong> {{heladeraDestino.ubicacion.nombre}}</p>
                        <p><strong>Motivo:</strong> {{motivo}}</p>
                    </div>
                </div>
            {{/distribuciones}}
        </div>
        <!-- Donaciones de Dinero -->
        <div class="col-md-12">
            {{#donacionesDinero}}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-success">Donación de Dinero</h5>
                        <p><strong>Fecha:</strong> {{fecha}}</p>
                        <p><strong>Monto:</strong> ${{monto}}</p>
                        <p><strong>Proxima donacion:</strong> {{frecuencia}}</p>
                    </div>
                </div>
            {{/donacionesDinero}}
        </div>
        <!-- Donaciones de Vianda -->
        <div class="col-md-12">
            {{#donacionesVianda}}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Donación de Vianda</h5>
                        <p><strong>Fecha:</strong> {{vianda.fechaDonacion}}</p>
                        <p><strong>Comida:</strong> {{vianda.descripcionComida}}</p>
                        <p><strong>Calorias:</strong> {{vianda.calorias}}</p>
                        <p><strong>Peso:</strong> {{vianda.peso}}</p>
                    </div>
                </div>
            {{/donacionesVianda}}
        </div>
        <!-- Hacerse Cargo -->
        <div class="col-md-12">
            {{#hacerseCargo}}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-info">Hacerse Cargo de Heladera</h5>
                        <p><strong>Fecha de Inicio:</strong> {{fechaInicio}}</p>
                        <p><strong>Punto Estratégico:</strong> {{puntoEstrategico.nombre}}</p>
                        <p><strong>Radio:</strong> {{radio}} km</p>
                    </div>
                </div>
            {{/hacerseCargo}}
        </div>
        <!-- Ofrecer Productos -->
        <div class="col-md-12">
            {{#ofertasProductos}}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-danger">Ofrecer Productos</h5>
                        <p><strong>Tipo de Producto:</strong> {{tipoProducto}}</p>
                        <p><strong>Marca:</strong> {{marca}}</p>
                        <p><strong>Monto:</strong> {{monto}}</p>
                    </div>
                </div>
            {{/ofertasProductos}}
        </div>
    </div>
</div>
