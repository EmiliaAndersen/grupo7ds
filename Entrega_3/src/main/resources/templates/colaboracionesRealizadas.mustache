    <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
        <div class="row">
            {{#successMessage}}
                <div class="alert alert-success my-2" >{{successMessage}}</div>
            {{/successMessage}}
            <div class="px-3 pt-3">
                <h2>Colaboraciones Realizadas:</h2>
                <hr>
            </div>
            {{#colabs_vacio}}
                <div class="alert alert-warning text-center" role="alert">
                    {{colabs_vacio}}
                </div>
            {{/colabs_vacio}}
            <div class="row px-3">
                <!-- Distribuciones -->
                {{#distribuciones}}

                    <div class="col-md-4 border-round zoom-image">
                        <div class="card shadow-sm border-0 border-round">
                            <div class="card-body">
                                <div class="card-header" style="background-color: transparent;">
                                    <h5 class="card-title text-info">Distribución</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>Heladera Destino:</strong> {{heladeraDestino}}</li>
                                    <li class="list-group-item"><strong>Heladera Origen:</strong> {{heladeraOrigen}}</li>
                                    <li class="list-group-item"><strong>Motivo:</strong> {{motivo}}</li>
                                    <li class="list-group-item"><strong>Fecha:</strong> {{fecha}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {{/distribuciones}}
                <!-- Donaciones de Dinero -->
                    {{#donacionesDinero}}
                    <div class="col-md-4 border-round zoom-image">
                        <div class="card shadow-sm border-0 border-round">
                            <div class="card-body">
                                <div class="card-header" style="background-color: transparent;">
                                    <h5 class="card-title text-primary">Donación de Dinero</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>Fecha:</strong> {{fecha}}</li>
                                    <li class="list-group-item"><strong>Monto:</strong> ${{monto}}</li>
                                    <li class="list-group-item"><strong>Proxima donación:</strong> {{Frecuencia}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    {{/donacionesDinero}}
                <!-- Donaciones de Vianda -->
                    {{#donacionesVianda}}

                        <div class="col-md-4 border-round zoom-image">
                            <div class="card shadow-sm border-0 border-round">
                                <div class="card-body">
                                    <div class="card-header" style="background-color: transparent;">
                                        <h5 class="card-title text-warning">Donación de Vianda</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Fecha:</strong> {{vianda.fechaDonacion}}</li>
                                        <li class="list-group-item"><strong>Comida:</strong> {{vianda.descripcionComida}}</li>
                                        <li class="list-group-item"><strong>Calorias:</strong> {{vianda.calorias}}</li>
                                        <li class="list-group-item"><strong>Peso:</strong> {{vianda.peso}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/donacionesVianda}}
                <!-- Hacerse Cargo -->
                    {{#hacerseCargo}}
                        <div class="col-md-4 border-round zoom-image">
                            <div class="card shadow-sm border-0 border-round">
                                <div class="card-body">
                                    <div class="card-header" style="background-color: transparent;">
                                        <h5 class="card-title text-success">Hacerse Cargo de Heladera</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Fecha de Inicio:</strong> {{fechaInicio}}</li>
                                        <li class="list-group-item"><strong>Punto Estratégico:</strong> {{puntoEstrategico.nombre}}</li>
                                        <li class="list-group-item"><strong>Radio:</strong> {{radio}} Km.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/hacerseCargo}}
                <!-- Ofrecer Productos -->
                    {{#ofertasProductos}}
                        <div class="col-md-4 border-round zoom-image" >
                            <div class="card shadow-sm border-0 border-round">
                                <div class="card-body">
                                    <div class="card-header" style="background-color: transparent;">
                                        <h5 class="card-title text-info">Ofrecer Productos</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Fecha de Inicio:</strong> {{tipoProducto}}</li>
                                        <li class="list-group-item"><strong>Marca:</strong> {{marca}}</li>
                                        <li class="list-group-item"><strong>Monto:</strong> {{monto}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/ofertasProductos}}
                </div>
            </div>
        </div>
    </div>