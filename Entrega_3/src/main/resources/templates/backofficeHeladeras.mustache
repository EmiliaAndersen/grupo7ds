<html>
<head>
    <title>Mi perfil</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"><!-- Tipografia -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet'>
    <link href='/static/css.css?1=14' rel='stylesheet'>
</head>
<body style="background-color: #e6eaf2;">

    <nav class="navbar navbar-expand-lg bg-primary" style="background-color: #3055b5!important;" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/front_page">Heladeras Solidarias</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/backoffice">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/backoffice/heladeras">Registro de Heladeras</a></li>
                    <li class="nav-item"><a class="nav-link" href="/backoffice/tecnicos">Registro de Tecnicos</a></li>
                </ul>
                <ul class="navbar-nav flex-row flex-wrap ms-md-auto me-3">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tools" style="font-size: 1.5rem;"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" disabled>Bienvenido</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="POST">
                                    <a href="/cerrarSesion" class="dropdown-item" id="cerrar-menu" name="logout">
                                        <i class="bi bi-door-open-fill"></i> Cerrar Sesión
                                    </a>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
        <div class="container mt-5 mb-2 border border-round shadow-1" style="background-color: #eff5ff;min-height: 600px;">
            <form method='POST' class="row p-4" id="subscriptionForm">
                <div class="row">
                    <h2>Registrar Heladera</h2>
                    <hr>
                    {{#successMessage}}
                        <div class="alert alert-success my-2" >{{successMessage}}</div>
                    {{/successMessage}}
                    {{#errorMessage}}
                        <div class="alert alert-warning my-2" >{{errorMessage}}</div>
                    {{/errorMessage}}
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="nombre" class="form-label">Nombre*</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="direccion" class="form-label">Dirección*</label>
                        <input type="text" class="form-control" id="direccion" name="direccion" required>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="longitud" class="form-label">Longitud*</label>
                        <input type="number" step="0.000001" class="form-control" id="longitud" name="longitud" required>
                    </div>
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="latitud" class="form-label">Latitud*</label>
                        <input type="number" step="0.000001" class="form-control" id="latitud" name="latitud" required>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="temperaturaMinima" class="form-label">Temperatura Mínima*</label>
                        <input type="number" step="0.001" class="form-control" id="temperaturaMinima" name="temperaturaMinima" required>
                    </div>
                    <div class="mb-3 col-md-6 mx-auto">
                        <label for="temperaturaMaxima" class="form-label">Temperatura Máxima*</label>
                        <input type="number" step="0.01" class="form-control" id="temperaturaMaxima" name="temperaturaMaxima" required>
                    </div>
                </div>
                <div class="row"> <!-- Nueva fila para capacidad de viandas -->
                <div class="mb-3 col-md-6 mx-auto">
                    <label for="capacidadViandas" class="form-label">Capacidad de Viandas*</label>
                    <input type="number" class="form-control" id="capacidadViandas" name="capacidadViandas" min="1" required>
                </div>
                </div>
                <hr class="my-3">
                <div class="row">
                    <div class="mx-auto col-md-3">
                        <button style="width: 100%" type="submit" id="value-submit" name="value-submit" class="btn btn-primary mt-2 mb-2 col-md-4" value="1">Registrar heladera</button><br>
                    </div>
                </div>
            </form>
        </div>
    </body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
